{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "outDir": "dist",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": "src",
		"paths": {
		"@models/*": ["models/*"],
		"@services/*": ["services/*"],
		"@utils/*": ["utils/*"],
		"@controllers/*": ["controllers/*"],
		"@middlewares/*": ["middlewares/*"],
		"@routes/*": ["routes/*"],
		"@validations/*": ["validations/*"],
		"@config/*": ["config/*"]
		},
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
  }