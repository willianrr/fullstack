// back/tsconfig.json
{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "rootDir": "src",      // garante que o TS pegue tudo em src/
	  "outDir": "dist",      // e solte tudo em dist/
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": "src",
	  "paths": {
		"@models/*": ["models/*"],
		"@services/*": ["services/*"],
		"@utils/*": ["utils/*"],
		"@controllers/*": ["controllers/*"],
		"@middlewares/*": ["middlewares/*"],
		"@routes/*": ["routes/*"],
		"@validations/*": ["validations/*"],
		"@config/*": ["config/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }
  